<div class="container">
  <div class="slide" ng-controller="sildeController">
    <img ng-repeat="slide in slides" class="img-responsive"
      ng-hide="!isCurrentSlideIndex($index)" ng-src="{{slide.image}}">
    <nav class="nav">
      <div class="wrapper">
        <ul class="dots">
          <li class="dot" ng-repeat="slide in slides">
            <a href="#" ng-class="{'active':isCurrentSlideIndex($index)}"
              ng-click="setCurrentSlideIndex($index);">
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</div>
