<div class="container">
  <div class="slide" ng-controller="sildeController">
    <img ng-repeat="slide in slides | orderBy:orderProp | limitTo:quantity" class="img-responsive"
      ng-hide="!isCurrentSlideIndex($index)" ng-src="{{slide.photo}}">
    <nav class="nav">
      <div class="wrapper">
        <ul class="dots">
          <li class="dot" ng-repeat="slide in slides | orderBy:orderProp | limitTo:quantity">
            <a href="#" ng-class="{'active':isCurrentSlideIndex($index)}"
              ng-click="setCurrentSlideIndex($index);">
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
  <div class="main">
    <h3 class="text-center">PRODUCTS</h3>
    <div class="product" ng-controller="ProductController">
      <div class="text-center">
        <ul class="list-product">
          <li dir-paginate="product in products | itemsPerPage: 12">
            <%= link_to "#", class: "product-img" do %>
              <img ng-src="{{product.images[product.images.length -1].photo}}" class="product-img img-thumbnail">
              </img>
            <% end %>
            <em class="product-price">{{product.price | currency}}</em>
          </li>
        </ul>
        <dir-pagination-controls></dir-pagination-controls>
      </div>
    </div>
  </div>
</div>

